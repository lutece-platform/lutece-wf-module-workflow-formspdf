<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <!-- Plugin Informations -->
    <name>workflow-formspdf</name>
    <class>fr.paris.lutece.plugins.workflow.modules.formspdf.service.FormsPDFPlugin
    </class>
    <version>1.0.2-SNAPSHOT</version>
    <documentation />
    <installation />
    <changes />
    <user-guide />
    <description>module.workflow.formspdf.module.description
    </description>
    <provider>module.workflow.formspdf.module.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/forms/modules/pdfproducer/forms-pdfproducer.png
    </icon-url>
    <copyright>Copyright 2001-2012 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>3.1.2</min-core-version>
        <max-core-version />
    </core-version-dependency>

    <!-- if the plugin must have a connection pool with parameter : 1 - yes, 
        0 - no -->
    <db-pool-required>1</db-pool-required>
    
    <servlets>
        <servlet>
            <servlet-name>myServlet1</servlet-name>
            <url-pattern>/servlet/plugins/formspdf/downloadpdf</url-pattern>
            <servlet-class>fr.paris.lutece.plugins.workflow.modules.formspdf.utils.DoDownloadPDF</servlet-class>
        </servlet>
    </servlets>
</plug-in>